{
  "name": "thoughtbelt",
  "version": "0.1.4",
  "description": "Monorepo for project bootstrapping CLIs",
  "main": "bin/belt.js",
  "type": "module",
  "scripts": {
    "belt": "bin/belt.js",
    "lint": "run-p lint:eslint lint:types lint:prettier",
    "lint:eslint": "eslint --max-warnings=0 --ext js,jsx,ts,tsx .",
    "lint:prettier": "prettier --check '**/*' --ignore-unknown",
    "lint:types": "tsc",
    "fix:prettier": "prettier --write '**/*' --ignore-unknown",
    "test": "vitest watch",
    "test:run": "test run",
    "test:all": "yarn lint && yarn test:run"
  },
  "bin": {
    "thoughtbelt": "./bin/belt.js"
  },
  "author": "thoughtbot, Inc.",
  "license": "MIT",
  "dependencies": {
    "@thoughtbot/eslint-config": "^1.0.2",
    "chalk": "^5.2.0",
    "commander": "^10.0.1",
    "eslint": "^8.45.0",
    "eta": "^2.1.1",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.0",
    "ora": "^6.3.0",
    "prettier": "^3.0.1",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.3",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.6",
    "memfs": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.4",
    "vitest": "^0.34.1"
  },
  "eslintConfig": {
    "extends": [
      "@thoughtbot/eslint-config/base",
      "@thoughtbot/eslint-config/prettier",
      "@thoughtbot/eslint-config/typescript"
    ],
    "rules": {
      "no-console": "off",
      "import/order": "off"
    },
    "ignorePatterns": [
      "__mocks__/**/*.js",
      "bin/belt.js",
      "/build"
    ]
  }
}
