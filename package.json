{
  "name": "thoughtbelt",
  "author": "thoughtbot, Inc.",
  "license": "MIT",
  "version": "0.1.7",
  "description": "React Native project starter and generator CLI",
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "thoughtbelt": "./dist/index.js",
    "belt": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE",
    "CONTRIBUTING.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist node_modules",
    "start": "node dist/index.js",
    "lint": "run-p lint:eslint lint:types lint:prettier",
    "lint:eslint": "eslint --max-warnings=0 --ext js,jsx,ts,tsx .",
    "lint:prettier": "prettier --check '**/*' --ignore-unknown",
    "lint:types": "tsc",
    "fix:prettier": "prettier --write '**/*' --ignore-unknown",
    "test": "vitest",
    "test:run": "vitest run",
    "test:all": "yarn lint && yarn test:run",
    "pub:beta": "yarn build && npm publish --tag beta",
    "pub:release": "yarn build && npm publish"
  },
  "dependencies": {
    "@inquirer/prompts": "^3.2.0",
    "@thoughtbot/eslint-config": "^1.0.2",
    "chalk": "^5.2.0",
    "commander": "^10.0.1",
    "eslint": "^8.45.0",
    "eta": "^2.1.1",
    "fs-extra": "^11.1.1",
    "ora": "^6.3.0",
    "prettier": "^3.0.1",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.3",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.6",
    "memfs": "^4.5.1",
    "npm-run-all": "^4.1.5",
    "tsup": "^7.2.0",
    "typescript": "^5.0.4",
    "vitest": "^0.34.1"
  },
  "eslintConfig": {
    "extends": [
      "@thoughtbot/eslint-config/base",
      "@thoughtbot/eslint-config/prettier",
      "@thoughtbot/eslint-config/typescript"
    ],
    "ignorePatterns": [
      "templates",
      "__mocks__/**/*.js",
      "bin/belt.js",
      "/dist",
      "vitest.setup.js"
    ],
    "rules": {
      "no-console": "off",
      "import/order": "off",
      "no-continue": "off"
    }
  }
}
