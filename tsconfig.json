{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["es2019"],
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["./**/*"],
}
